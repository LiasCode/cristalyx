{
  "name": "cristalyx",
  "version": "1.0.0",
  "description": "Cristalyx is a Minimal Library Express-Like that wrap http.createserver module",
  "main": "index.js",
  "scripts": {
    "build": "tsc -p ./tsconfig.json",
    "test:dev": "ts-node-dev --watch ./src  --clear --ignore-watch node_modules ./test/server.ts",
    "format": "prettier --write 'src/**/*.{js,ts,json}' --config .prettierrc.json",
    "check-types": "tsc --noEmit -p ./tsconfig.json"
  },
  "keywords": [
    "express",
    "http",
    "server",
    "lib"
  ],
  "author": "LiasCode",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^20.11.0",
    "prettier": "3.2.5",
    "ts-node": "10.9.2",
    "ts-node-dev": "2.0.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "zod": "3.22.4"
  }
}
