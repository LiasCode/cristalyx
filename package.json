{
  "name": "cristalyx",
  "version": "1.0.0",
  "description": "Cristalyx is a minimal and fast library that wrap http.createserver module for web server creation",
  "main": "index.js",
  "scripts": {
    "build:lib": "tsc -p ./tsconfig.json",
    "test:dev": "ts-node-dev --watch ./src  --clear --ignore-watch node_modules ./test/server.ts",
    "test:start": "node ./dist/test/server.js",
    "format": "prettier --write '{lib,test}/**/*.{js,ts,json}' --config .prettierrc.json",
    "check-types": "tsc --noEmit -p ./tsconfig.json"
  },
  "keywords": [
    "http",
    "server",
    "lib"
  ],
  "author": "LiasCode",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^20.12.6",
    "prettier": "3.2.5",
    "ts-node": "10.9.2",
    "ts-node-dev": "2.0.0",
    "typescript": "^5.4.4"
  },
  "dependencies": {
    "@types/polka": "0.5.7",
    "polka": "0.5.2",
    "zod": "3.22.4"
  }
}
