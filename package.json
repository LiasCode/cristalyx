{
  "name": "cristalyx",
  "version": "1.0.0",
  "description": "Cristalyx is a minimal and fast library that wrap http.createserver module for web server creation",
  "main": "index.js",
  "scripts": {
    "build:lib": "tsc -p ./tsconfig.json",
    "test:dev": "tsx --watch ./test/server.ts",
    "test:start": "tsx ./test/server.ts",
    "format": "biome format --write",
    "lint": "biome lint --write && biome check --write",
    "check": "tsc --noEmit -p ./tsconfig.json"
  },
  "keywords": [
    "lib",
    "http",
    "server"
  ],
  "author": "LiasCode",
  "license": "ISC",
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "@types/node": "^20.12.11",
    "tsx": "^4.19.2",
    "typescript": "^5.4.5",
    "zod": "^3.24.1"
  }
}
